<div class="vertical-center-content">
  <div class="resume-index-content" data-controller="display-description-resume">
    <div class="experiences">
      <div class="work-experiences">
        <h1 class="list-title">Work</h1>
        <ul class="remove-disc">
          <% @professional_experiences.each do |professional_experience| %>
            <li>
              <p class="underline-link" data-display-description-resume-target="experience" data-action="click->display-description-resume#displayDescription" data-display-description-resume-id-param='<%= professional_experience.id %>' data-display-description-resume-section-param="work"><%= professional_experience.title %></p>
            </li>
          <% end %>
        </ul>
      </div>
      <div class="study-experience">
        <h1 class="list-title">Study</h1>
        <ul class="remove-disc">
          <% @trainings.each do |training| %>
            <li>
              <p class="underline-link" data-display-description-resume-target="experience" data-action="click->display-description-resume#displayDescription" data-display-description-resume-id-param='<%= training.id %>' data-display-description-resume-section-param="study"><%= training.title %></p>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
    <div class="experience-description">
      <div data-display-description-resume-target="descriptionCompany" class="company-experience-description"></div>
      <div data-display-description-resume-target="descriptionDate" class="time-experience-description"></div>
      <p data-display-description-resume-target="descriptionText" class="text-experience-description">click on one experience to see the description</p>
    </div>
  </div>
</div>
