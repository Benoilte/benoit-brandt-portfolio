{
  "theme_color": "#ffffff",
  "background_color": "white",
  "description": "Recently graduated from Le Wagon development web Bootcamp, I'm actively looking for a first working experience to boost my coding progress. In parallel to my job research, I keep practicing programming with personal projects and by self-taught on different learning platforms",
  "display": "fullscreen",
  "name": "Benoit Brandt",
  "icons": [
    <% files = Dir.entries(Rails.root.join("app/assets/images/icons/")).select {|f| !File.directory? f} %>
    <% files.each_with_index do |file, index| %>
      <% match = file.match(/.+-(?<size>\d{2,3}x\d{2,3}).png/) %>
      {
        "src": "<%= image_path "icons/#{file}" %>",
        "sizes": "<%= match && match[:size] %>",
        "type": "image/png"
      }<%= "," unless (files.size - 1) == index %>
    <% end %>
  ]
}
